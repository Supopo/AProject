<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xxx.xxx.viewModel.RegisterModel" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/login_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_user_tel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@null"
                android:hint="@string/yourPhone"
                android:inputType="number"
                android:text="@={viewModel.userPhone}"
                android:textColor="@color/textcolorffe0"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="292dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_user_pass"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/yourPass"
                android:inputType="numberPassword"

                android:text="@={viewModel.code}"
                android:textColor="@color/textcolorffe0"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.codeText}"
                android:textColor="@color/white"
                android:textSize="16sp"
                binding:onClickCommand="@{viewModel.getCode}" />
        </LinearLayout>

        <View
            android:layout_width="292dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/tv_login_user"
            android:layout_width="292dp"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_white_register"
            android:gravity="center"
            android:text="@string/text_next"
            android:textColor="@color/textcolorff56"
            android:textSize="@dimen/sp_18"
            binding:onClickCommand="@{viewModel.regist}" />

    </LinearLayout>
</layout>